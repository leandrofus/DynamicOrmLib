{
  "module": {
    "name": "inventory",
    "version": "0.1.0",
    "author": "DynamicOrmLib"
  },
  "models": [
    {
      "name": "product",
      "fields": [
        {"name": "name", "type": "string", "required": true},
        {"name": "sku", "type": "string"},
        {"name": "price", "type": "number"}
      ]
    },
    {
      "name": "stock",
      "fields": [
        {
          "name": "product_id",
          "type": "relation",
          "relation": {"model": "product"}
        },
        {"name": "quantity", "type": "number"}
      ]
    }
  ]
}
