{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dynamicOrm model manifest schema",
  "type": "object",
  "properties": {
    "models": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "module": { "type": "string" },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "label": { "type": "string" },
                "type": { "type": "string" },
                "required": { "type": "boolean" }
              },
              "required": ["name", "type"]
            }
          }
        },
        "required": ["name"]
      }
    }
  },
  "required": ["models"]
}
